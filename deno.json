{
  "name": "scout-cli",
  "version": "0.0.0",
  "exports": "./mod.ts",
  "tasks": {
    "lint": "deno lint",
    "format": "deno fmt",
    "dev": "deno run --allow-read --allow-write --allow-env --allow-net mod.ts"
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "install": {
    "name": "scout-cli",
    "exe": "scout-cli"
  },
  "permissions": {
    "read": ["$HOME/.scout-cli"],
    "write": ["$HOME/.scout-cli"],
    "env": ["HOME", "USERPROFILE"],
    "net": true
  }
}
