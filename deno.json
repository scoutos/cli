{
  "name": "scout-cli",
  "version": "0.1.1",
  "exports": "./mod.ts",
  "tasks": {
    "lint": "deno lint",
    "format": "deno fmt",
    "build": "deno compile --allow-read --allow-write --allow-env --allow-net --output scout-cli-macos mod.ts",
    "dev": "deno run --allow-read --allow-write --allow-env --allow-net mod.ts",
    "test": "deno test --allow-read --allow-write --allow-env --allow-net mod_test.ts",
    "test:watch": "deno test --allow-read --allow-write --allow-env --allow-net --watch mod_test.ts",
    "cache": "deno cache mod_test.ts"
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "install": {
    "name": "scout-cli",
    "exe": "scout-cli"
  },
  "permissions": {
    "read": ["$HOME/.scout-cli"],
    "write": ["$HOME/.scout-cli"],
    "env": ["HOME", "USERPROFILE"],
    "net": true
  },
  "nodeModulesDir": "auto"
}
